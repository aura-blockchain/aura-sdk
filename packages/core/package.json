{
  "name": "@aura-network/verifier-sdk",
  "version": "1.0.0",
  "description": "Aura Network Third-Party Verifier SDK - Core Package",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "benchmark": "tsx benchmarks/index.ts",
    "benchmark:quick": "tsx benchmarks/quick-test.ts",
    "benchmark:qr": "tsx benchmarks/qr-benchmark.ts",
    "benchmark:crypto": "tsx benchmarks/crypto-benchmark.ts",
    "benchmark:cache": "tsx benchmarks/cache-benchmark.ts",
    "benchmark:e2e": "tsx benchmarks/e2e-benchmark.ts"
  },
  "dependencies": {
    "@cosmjs/crypto": "^0.32.2",
    "@cosmjs/encoding": "^0.32.2",
    "@cosmjs/proto-signing": "^0.32.2",
    "@cosmjs/stargate": "^0.32.2",
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.3",
    "@noble/secp256k1": "^2.0.0",
    "protobufjs": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^4.0.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "aura",
    "blockchain",
    "cosmos",
    "verifier",
    "sdk",
    "typescript",
    "cryptography",
    "ed25519",
    "secp256k1"
  ],
  "author": "Aura Network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:aura-blockchain/aura-verifier-sdk.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/aura-blockchain/aura-verifier-sdk/issues"
  },
  "homepage": "https://github.com/aura-blockchain/aura-verifier-sdk#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
