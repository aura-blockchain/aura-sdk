{
  "name": "aura-verifier-express-api-example",
  "version": "1.0.0",
  "description": "Express API server example for Aura Verifier SDK",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node --loader ts-node/esm index.ts",
    "dev": "node --loader ts-node/esm --watch index.ts",
    "build": "tsc",
    "serve": "node dist/index.js"
  },
  "dependencies": {
    "@aura-network/verifier-sdk": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
